zap:
  level: info
  development: false
  disableStacktrace: true
  encoding: console
  encoderConfig:
    messageKey: message
    nameKey: logger_name
    levelKey: level
    timeKey: ts
    callerKey: caller
    stacktraceKey: stack
    levelEncoder: capital
    timeEncoder: iso8601
    durationEncoder: seconds
    callerEncoder: short
  outputPaths:
    - {{ kraken_log_dir }}/kraken-tracker.log
  errorOutputPaths:
    - {{ kraken_log_dir }}/kraken-tracker.log

logging:
  level: info
  stdout: true
  sentry:
    enabled: false
    tags:
      deployment: default

peerhandoutpolicy:
  priority: completeness

metrics:
  m3:
    service: kraken-tracker

trackerserver:
  listener:
    net: unix
    addr: {{ kraken_tracker_socket }}

nginx:
  name: kraken-tracker
  cache_dir: {{ kraken_cache_dir }}/kraken-tracker/nginx
  log_dir: {{ kraken_log_dir }}
