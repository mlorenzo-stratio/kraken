[Unit]
Description={{ service }}
After=network.target

[Service]
Type=exec
Restart=always
StartLimitInterval=0
RestartSec=15
TimeoutStartSec=120
TimeoutStopSec=15
PermissionsStartOnly=true
User={{ user }}
Group={{ group }}

ExecStartPre=/usr/bin/mkdir -p {{ kraken_tracker_socket_dir }} {{ kraken_tracker_nginx_folders | join(' ') }} ; /usr/bin/chown -R {{ user }}:{{ group }} {{ kraken_tracker_socket_dir }} {{ kraken_tracker_nginx_folders | join(' ') }}
ExecStart={{ kraken_tracker_binary }} \
          --config={{ kraken_config_dir }}/kraken-tracker.yaml \
          --port={{ kraken_tracker_port }}
ExecStartPost=/usr/bin/sleep 1 ; /bin/kill -0 $MAINPID

[Install]
WantedBy=multi-user.target