[Unit]
Description={{ service }}
After=network.target

[Service]
Type=exec
Restart=always

StartLimitInterval=0
RestartSec=15
TimeoutStartSec=120
TimeoutStopSec=15

User={{ user }}
Group={{ group }}

PermissionsStartOnly=true
ExecStartPre=/usr/bin/bash -c "if ! kill -0 $MAINPID; then rm -f {{ kraken_agent_socket }}; fi"
ExecStartPre=/usr/bin/mkdir -p {{ kraken_socket_dir }}
ExecStartPre=/usr/bin/chown root:{{ group }} {{ kraken_socket_dir }}
ExecStartPre=/usr/bin/chmod g+w {{ kraken_socket_dir }}

ExecStart={{ kraken_binary_dir }}/kraken-agent \
          --config={{ kraken_config_dir }}/kraken-agent.yaml \
{% for herd_host in kraken_herd_hosts %}
          --peer-ip={{ herd_host }} \
{% endfor %}
          --peer-port={{ kraken_agent_peer_port }} \
          --agent-server-port={{ kraken_agent_server_port }} \
          --agent-registry-port={{ kraken_agent_registry_port }}

ExecStartPost=/usr/bin/sleep 1
ExecStartPost=/bin/kill -0 $MAINPID

[Install]
WantedBy=multi-user.target