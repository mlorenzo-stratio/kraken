zap:
  level: info
  development: false
  encoding: console
  disableStacktrace: true
  encoderConfig:
    messageKey: message
    nameKey: logger_name
    levelKey: level
    timeKey: ts
    callerKey: caller
    stacktraceKey: stack
    levelEncoder: capital
    timeEncoder: iso8601
    durationEncoder: seconds
    callerEncoder: short
  outputPaths:
    - stdout
  errorOutputPaths:
    - stderr

metainfogen:
  piece_lengths:
    0: 4MB # Use 4MB piece lengths for all file sizes (for now).

peer_id_factory: addr_hash

scheduler:
  log:
    timeEncoder: iso8601
  torrentlog:
    disable: true

metrics:
  m3:
    service: kraken-origin

localdb:
  source: {{ kraken_origin_cache_folder }}/origin.db

castore:
  upload_dir: {{ kraken_origin_cache_folder }}/upload/
  cache_dir: {{ kraken_origin_cache_folder }}/cache/

blobserver:
  listener:
    net: unix
    addr: {{ kraken_origin_registry_socket }}

nginx:
  name: kraken-origin
  cache_dir: {{ kraken_origin_cache_folder }}/nginx/
  log_dir: {{ kraken_origin_log_folder }}
