[Unit]
Description={{ service }}
After=network.target

[Service]
Type=exec
Restart=always
StartLimitInterval=0
RestartSec=15
TimeoutStartSec=120
TimeoutStopSec=15
PermissionsStartOnly=true
User={{ user }}
Group={{ group }}
ExecStartPre=/usr/bin/mkdir -p {{ kraken_socket_dir }} {{ kraken_origin_nginx_folders | join(' ') }} ; /usr/bin/chown -R {{ user }}:{{ group }} {{ kraken_socket_dir }} {{ kraken_origin_nginx_folders | join(' ') }}
ExecStart={{ kraken_origin_binary }} \
          --config={{ kraken_config_dir }}/kraken-origin.yaml \
          --blobserver-hostname={{ ansible_fqdn }} \
          --blobserver-port={{ kraken_origin_server_port }} \
{% for herd_host in kraken_herd_hosts %}
          --peer-ip={{ herd_host }} \
{% endfor %}
          --peer-port={{ kraken_origin_peer_port }}
ExecStartPost=/usr/bin/sleep 1 ; /bin/kill -0 $MAINPID

[Install]
WantedBy=multi-user.target