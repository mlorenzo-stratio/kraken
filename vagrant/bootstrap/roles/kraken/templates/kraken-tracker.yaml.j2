extends: base.yaml

peerstore:
  redis:
    addr: 127.0.0.1:{{ redis_port }}

origin:
  hosts:
    static:
{% for herd_host in kraken_herd_hosts %}
      - {{ herd_host }}:{{ kraken_origin_server_port }}
{% endfor %}

trackerserver:
  announce_interval: 3s

tls:
  name: kraken
  cas:
  - path: {{ kraken_tracker_server_crt }}
  server:
    disabled: false
    cert:
      path: {{ kraken_tracker_server_crt }}
    key:
      path: {{ kraken_tracker_server_key }}
    passphrase:
      path: {{ kraken_tracker_server_passphrase }}
  client:
    cert:
      path: {{ kraken_tracker_client_crt }}
    key:
      path: {{ kraken_tracker_client_key }}
    passphrase:
      path: {{ kraken_tracker_client_passphrase }}
