zap:
  level: info
  development: false
  encoding: console
  disableStacktrace: true
  encoderConfig:
    messageKey: message
    nameKey: logger_name
    levelKey: level
    timeKey: ts
    callerKey: caller
    stacktraceKey: stack
    levelEncoder: capital
    timeEncoder: iso8601
    durationEncoder: seconds
    callerEncoder: short
  outputPaths:
    - stdout
  errorOutputPaths:
    - stderr

metrics:
  m3:
    service: kraken-agent

scheduler:
  log:
    timeEncoder: iso8601
  torrentlog:
    service_name: kraken-agent
    path: {{ kraken_agent_log_folder }}/torrent.log
    encoding: json
    timeEncoder: epoch
  dispatch:
    piece_request_policy: rarest_first
  conn:
    bandwidth:
      enable: true

store:
  download_dir: {{ kraken_agent_cache_folder }}/download/
  cache_dir:  {{ kraken_agent_cache_folder }}/cache/
  download_cleanup:
    ttl: 24h
  cache_cleanup:
    ttl: 24h

registry:
  docker:
    version: 0.1
    log:
      level: error
    http:
      net: unix
      addr: {{ kraken_agent_socket }}

peer_id_factory: addr_hash

# Allow agent to only serve localhost and Docker default bridge requests.
allowed_cidrs:
  - 127.0.0.1
  - 172.17.0.1

nginx:
  name: kraken-agent
  cache_dir: {{ kraken_agent_cache_folder }}/nginx/
  log_dir: {{ kraken_agent_log_folder }}/
